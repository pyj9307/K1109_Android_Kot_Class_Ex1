<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.test13.LoginTestActivity"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/lake_1"
        />

    <EditText
        android:id="@+id/detailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일 형식으로 입력해주세요."
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        android:fontFamily="@font/cookierunblack"
        android:layout_gravity="bottom"
        />

    <EditText
        android:id="@+id/detailPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="패스워드 입력해주세요."
        android:inputType="textPassword"
        android:textSize="20sp"
        android:fontFamily="@font/cookierunblack"
        android:layout_gravity="bottom"
        />

    <Button
        android:id="@+id/detailButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:fontFamily="@font/cookierunblack"
        android:textSize="20sp"
        />

</LinearLayout>